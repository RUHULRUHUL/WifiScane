<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/wifi_connect_animation" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Wifi Qr Code Scanner and Automatic Connect Wifi You can Easily Connect any Network Wifi like Wifi Qr Code Scan and It Can get Network Name Password and Wifi Type and It Can automatic connect to this Wifi"
        android:textAlignment="center"
        android:textColor="#959494"
        android:textSize="18sp">

    </androidx.appcompat.widget.AppCompatTextView>

</LinearLayout>